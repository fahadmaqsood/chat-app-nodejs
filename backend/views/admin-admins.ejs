<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            background-color: #343a40;
            min-height: 100vh;
            padding-top: 1rem;
        }

        .sidebar a {
            color: #ddd;
            display: block;
            padding: 12px 20px;
            text-decoration: none;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #495057;
            color: #fff;
        }

        .stat-card {
            border-left: 5px solid #0d6efd;
            background: white;
            padding: 1rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

        /* Responsive Sidebar */
        @media (max-width: 767.98px) {
            #sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease-in-out;
                z-index: 1050;
                background-color: #343a40;
                width: 250px;
                position: fixed;
                top: 0;
                left: 0;
                height: 100%;
            }

            #sidebar.active {
                transform: translateX(0);
            }

            #mainContent {
                padding-left: 8 !important;
            }
        }
    </style>
</head>

<body>
    <!-- Overlay for closing sidebar -->
    <div id="sidebarOverlay" class="position-fixed top-0 start-0 w-100 h-100 d-none"
        style="z-index: 1040; background-color: rgba(0,0,0,0.5);"></div>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('partials/_sidebar') %>

                <!-- Main Content -->
                <!-- Main Content for Admins Page -->
                <main class="col-md-10 offset-md-2 px-3 px-md-4 content" id="mainContent">
                    <!-- Mobile Hamburger -->
                    <button class="btn btn-outline-secondary d-md-none mt-3" id="toggleSidebar">
                        <i class="bi bi-list"></i>
                    </button>

                    <h2 class="mt-4">All Admins</h2>
                    <p class="text-muted">Click on an admin row to view detailed information about their profile.</p>

                    <!-- Button to add a new admin -->
                    <div class="mb-3">
                        <a href="/admin/dashboard/admins/add" class="btn btn-primary">
                            <i class="bi bi-person-plus me-2"></i>Add New Admin
                        </a>
                    </div>

                    <!-- Search Bar -->
                    <form method="GET" action="/admin/dashboard/admins" class="mb-3">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Search by name or email"
                                value="<%= searchQuery %>">
                            <button class="btn btn-outline-secondary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Admins Table -->
                    <div class="table-responsive mt-4">
                        <table class="table table-bordered table-hover bg-white">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Added</th>
                                    <th>Role</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% admins.forEach((admin, index)=> { %>
                                    <tr style="cursor: pointer;"
                                        onclick="window.location.href='/admin/dashboard/admin/<%= admin.email %>'">
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= admin.name %>
                                        </td>
                                        <td>
                                            <%= admin.email %>
                                        </td>
                                        <td>
                                            <%= admin.dateAdded.toDateString() %>
                                        </td>
                                        <td>
                                            <%= admin.role %>
                                        </td>
                                        <td>
                                            <!-- Admin Actions -->
                                            <% if (admin.role==='admin' && userRole==='admin' ) { %>
                                                <button class="btn btn-warning btn-sm"
                                                    onclick="confirmAction('demote', '<%= admin.email %>', '<%= admin.name %>')">
                                                    Demote to Reports Manager
                                                </button>
                                                <button class="btn btn-danger btn-sm"
                                                    onclick="event.stopPropagation();if (!this.disabled) confirmAction('remove', '<%= admin.email %>', '<%= admin.name %>')"
                                                    <%=admin._id.toString()==userId.toString()
                                                    ? 'disabled title="You cannot remove yourself"' : '' %>>
                                                    Remove
                                                </button>
                                                <% } else if (admin.role==='reports manager' && userRole==='admin' ) {
                                                    %>
                                                    <button class="btn btn-primary btn-sm"
                                                        onclick="confirmAction('promote', '<%= admin.email %>', '<%= admin.name %>')">
                                                        Promote to Admin
                                                    </button>
                                                    <% } %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination Block -->
                    <nav aria-label="Admins page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage> 1) { %>
                                <li class="page-item">
                                    <a class="page-link"
                                        href="?page=<%= currentPage - 1 %>&search=<%= searchQuery %>">Previous</a>
                                </li>
                                <% } %>

                                    <% for (let i=1; i <=totalPages; i++) { %>
                                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>&search=<%= searchQuery %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                        <% } %>

                                            <% if (currentPage < totalPages) { %>
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="?page=<%= currentPage + 1 %>&search=<%= searchQuery %>">Next</a>
                                                </li>
                                                <% } %>
                        </ul>
                    </nav>
                </main>

        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('sidebarOverlay');
        const toggleBtn = document.getElementById('toggleSidebar');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('active');
            overlay.classList.toggle('d-none');
        });

        overlay.addEventListener('click', () => {
            sidebar.classList.remove('active');
            overlay.classList.add('d-none');
        });
    </script>

    <script>
        // Confirmation dialog function
        function confirmAction(action, email, name) {

            let actionText = '';
            let actionUrl = '';

            // Set appropriate text and URL based on action
            switch (action) {
                case 'promote':
                    actionText = `promote ${name} to Admin`;
                    actionUrl = `/admin/dashboard/admin/promote/${email}`;
                    break;
                case 'demote':
                    actionText = `demote ${name} to Reports Manager`;
                    actionUrl = `/admin/dashboard/admin/promote/${email}`;
                    break;
                case 'remove':
                    actionText = `remove ${name} from admin team`;
                    actionUrl = `/admin/dashboard/admin/remove/${email}`;
                    break;
            }

            // Show confirmation dialog
            if (confirm(`Are you sure you want to ${actionText}?`)) {
                // For demo purposes - just show what would happen
                alert(`Would normally ${action} ${name} (${email}) by calling: ${actionUrl}`);

                // In a real implementation, you would make an AJAX call or form submission:
                // fetch(actionUrl, { method: 'POST' })
                //     .then(response => {
                //         if (response.ok) {
                //             window.location.reload();
                //         } else {
                //             alert('Action failed');
                //         }
                //     });
            }
        }
    </script>
</body>

</html>
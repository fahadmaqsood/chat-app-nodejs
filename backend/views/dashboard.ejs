<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            background-color: #343a40;
            min-height: 100vh;
            padding-top: 1rem;
        }

        .sidebar a {
            color: #ddd;
            display: block;
            padding: 12px 20px;
            text-decoration: none;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #495057;
            color: #fff;
        }

        .stat-card {
            border-left: 5px solid #0d6efd;
            background: white;
            padding: 1rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

        /* Responsive Sidebar */
        @media (max-width: 767.98px) {
            #sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease-in-out;
                z-index: 1050;
                background-color: #343a40;
                width: 250px;
                position: fixed;
                top: 0;
                left: 0;
                height: 100%;
            }

            #sidebar.active {
                transform: translateX(0);
            }

            #mainContent {
                padding-left: 8 !important;
            }
        }
    </style>
</head>

<body>
    <!-- Overlay for closing sidebar -->
    <div id="sidebarOverlay" class="position-fixed top-0 start-0 w-100 h-100 d-none"
        style="z-index: 1040; background-color: rgba(0,0,0,0.5);"></div>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar d-flex flex-column position-fixed top-0 start-0 h-100" id="sidebar">
                <div class="text-white text-center py-3 fs-5 fw-bold border-bottom">Admin Panel</div>
                <a href="/admin/dashboard/main" class="active"><i class="bi bi-house me-2"></i>Main</a>
                <a href="/admin/dashboard/users"><i class="bi bi-people me-2"></i>Users</a>
                <a href="/admin/dashboard/user-reports"><i class="bi bi-flag me-2"></i>User Reports</a>
                <a href="/admin/dashboard/message-reports"><i class="bi bi-exclamation-diamond me-2"></i>Message
                    Reports</a>
                <a href="/admin/dashboard/message-reports"><i class="bi bi-megaphone me-2"></i>Complaints</a>
                <a href="/admin/dashboard/vouchers"><i class="bi bi-ticket-perforated me-2"></i>Vouchers</a>
                <a href="/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 offset-md-2 px-3 px-md-4 content" id="mainContent">
                <!-- Mobile Hamburger -->
                <button class="btn btn-outline-secondary d-md-none mt-3" id="toggleSidebar">
                    <i class="bi bi-list"></i>
                </button>

                <h2 class="mt-4">Welcome, <%= adminName %> ðŸ‘‹</h2>

                <div class="row g-3 mt-3">
                    <div class="col-md-3">
                        <div class="stat-card">
                            <h6>Total Users</h6>
                            <h3>
                                <%= totalUsers %>
                            </h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <h6>Joined This Month</h6>
                            <h3>
                                <%= usersJoinedThisMonth %>
                            </h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <h6>Active Subscriptions</h6>
                            <h3>
                                <%= activeSubscriptions %>
                            </h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <h6>Active Reports</h6>
                            <h3>
                                <%= totalActiveReports %>
                            </h3>
                        </div>
                    </div>
                </div>

                <!-- Country Map Placeholder -->
                <div class="mt-5">
                    <h5>User Distribution by Country</h5>
                    <div class="border rounded p-4 bg-white" style="height: 400px;">
                        <div id="geochart" style="width: 100%; height: 100%;"></div>
                    </div>
                </div>

                <!-- Additional Stats -->
                <div class="mt-5">
                    <h5>Other Insights</h5>
                    <ul>
                        <li>Users joined today: <%= usersJoinedToday %>
                        </li>
                    </ul>
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        google.charts.load('current', {
            'packages': ['geochart'],
            'mapsApiKey': 'YOUR_GOOGLE_MAPS_API_KEY' // Replace with your API key
        });
        google.charts.setOnLoadCallback(drawRegionsMap);

        console.log(`<%- userDistributionByCountry %>`); // Debugging line to check userData

        function drawRegionsMap() {
            const data = google.visualization.arrayToDataTable(JSON.parse(`<%- userDistributionByCountry %>`));

            const options = {
                colorAxis: { colors: ['#cfe2ff', '#084298'] },
                datalessRegionColor: '#f8f9fa',
                backgroundColor: '#ffffff',
                defaultColor: '#6c757d'
            };

            const chart = new google.visualization.GeoChart(document.getElementById('geochart'));
            chart.draw(data, options);
        }
    </script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('sidebarOverlay');
        const toggleBtn = document.getElementById('toggleSidebar');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('active');
            overlay.classList.toggle('d-none');
        });

        overlay.addEventListener('click', () => {
            sidebar.classList.remove('active');
            overlay.classList.add('d-none');
        });
    </script>
</body>

</html>